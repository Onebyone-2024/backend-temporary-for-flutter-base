generator client {
  provider      = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum JobStatus {
  planned
  in_progress
  finished
  closed
  deleted
}

model User {
  uuid      String   @id @default(uuid()) @db.Uuid
  fullName  String   @map("full_name")
  email     String   @unique
  status    String?
  password  String
  createdAt DateTime @default(now()) @map("created_at")
  jobs      Job[]

  @@map("users")
}

model Job {
  uuid        String    @id @default(uuid()) @db.Uuid
  jobCode     String    @unique @map("job_code")
  jobStatus   JobStatus @default(planned) @map("job_status")
  description String?
  assignedTo  String?   @map("assigned_to") @db.Uuid
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  assignee User?     @relation(fields: [assignedTo], references: [uuid], onDelete: SetNull)
  pickup   Pickup?
  delivery Delivery?

  @@map("jobs") 
}

model Pickup {
  uuid      String   @id @default(uuid()) @db.Uuid
  jobUuid   String   @unique @map("job_uuid") @db.Uuid
  address   String
  lat       Float
  lng       Float
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  job Job @relation(fields: [jobUuid], references: [uuid], onDelete: Cascade)

  @@map("pickups") 
}

model Delivery {
  uuid              String    @id @default(uuid()) @db.Uuid
  jobUuid           String    @unique @map("job_uuid") @db.Uuid
  address           String
  lat               Float
  lng               Float
  polyline          String?
  distanceKm        Float?    @map("distance_km")
  eta               DateTime? @map("eta")
  etd               DateTime? @map("etd")
  estimateDuration  Int?      @map("estimate_duration") // dalam menit
  atd               DateTime? @map("atd") // Actual Time of Departure
  ata               DateTime? @map("ata") // Actual Time of Arrival
  actualDuration    Int?      @map("actual_duration") // dalam menit
  createdAt         DateTime  @default(now()) @map("created_at")
  updatedAt         DateTime  @updatedAt @map("updated_at")

  job Job @relation(fields: [jobUuid], references: [uuid], onDelete: Cascade)

  @@map("deliveries") 
}
